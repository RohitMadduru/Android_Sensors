<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.rohit.sensors">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Sensors"
        android:usesCleartextTraffic="true"
        tools:targetApi="m">
        <activity android:name=".Pressure" />
        <activity android:name=".Humidity" />
        <activity android:name=".Temperature" />
        <activity android:name=".Proximity" />
        <activity
            android:name=".Upload"
            android:screenOrientation="portrait"
            android:configChanges="keyboardHidden|orientation|screenSize"
            />
        <activity
            android:name=".Micro"
            android:screenOrientation="portrait"
            android:configChanges="keyboardHidden|orientation|screenSize"
            />
        <activity android:name=".Location"
            android:configChanges="keyboardHidden|orientation|screenSize"
            />
        <activity android:name=".Gyro"
            android:configChanges="keyboardHidden|orientation|screenSize"
            />
        <activity android:name=".Magnet"
            android:configChanges="keyboardHidden|orientation|screenSize"
            />
        <activity android:name=".Acelo"
            android:configChanges="keyboardHidden|orientation|screenSize"
            />
        <activity
            android:name=".HomeScreen"
            android:configChanges="keyboardHidden|orientation|screenSize"
            />
        <activity
            android:name=".MainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:theme="@style/Theme.MaterialComponents.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>